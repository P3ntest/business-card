---
import type { LinkGroup } from "../lib/cockpit.types";
import LinkComponent from "./LinkComponent.astro";

export interface Props extends LinkGroup {}

const { title, links } = Astro.props;
---

<div class="p-20 flex flex-col gap-14">
    <h2 class="text-5xl font-bold" data-aos="fade-right">
        {title}
    </h2>
    <div class="flex flex-col gap-5">
        {links.map((link) => <LinkComponent {...link} />)}
    </div>
</div>
